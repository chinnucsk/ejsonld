#! /usr/bin/env escript
%%! -pa ./ebin/ -pa ./deps/jsx/ebin

% This file is part of ejsonld released under the MIT license.
% See the LICENSE file for more information.

main(Args) ->
    case Args of
        [JsonFile] -> process_it(JsonFile);
        _ -> io:format("Wrong usage: jsonfile~n", [])
    end.

process_it(JsonFile) ->
    {ok, Json} = file:read_file(JsonFile),

    JsonItem = jsx:json_to_term(Json),

    ExpandedJsonItem = ejsonld:expand(JsonItem),

    FinalJson = jsx:term_to_json(ExpandedJsonItem),

    io:format("~s~n", [FinalJson]),
    ok.
